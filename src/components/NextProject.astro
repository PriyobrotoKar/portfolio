---
import Card from './Card'

interface Props {
  next: {
    title: string
    slug: string
    metadata: {
      overview: string
      thumbnail: {
        url: string
      }
      primary_color: string
    }
  }
}

const { next } = Astro.props
if (!next) {
  return null
}
---

<section>
  <h2 class="mb-10 text-4xl font-semibold text-muted-foreground">
    Next Project
  </h2>
  <Card
    client:load
    href={`/projects/${next.slug}`}
    title={next.title}
    metadata={next.metadata}
    size="large"
  />
</section>

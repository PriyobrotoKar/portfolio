---
import { cosmic } from "@/lib/cosmic";
import "@fontsource/dm-serif-display/400-italic.css";

const {
  object: { metadata: details },
} = await cosmic.objects
  .findOne({
    type: "personal-details",
    slug: "details",
  })
  .props("slug,title,metadata")
  .depth(1);

const styles = [
  "rotate-[10deg] translate-y-20 scale-105",
  "rotate-[4deg]",
  "-rotate-12 translate-y-32 scale-110",
  "-rotate-[20deg] ",
  "-rotate-3 -translate-y-20 col-start-3",
];
---

<section class="min-h-[60svh] flex justify-start items-center">
  <h2
    class="text-8xl leading-tight w-fit mx-auto max-w-screen-lg bg-gradient-to-t from-neutral-600 to-white bg-clip-text text-transparent"
  >
    I develop <span class="font-bold">
      <span class="text-gray-400/40 blur-md absolute">Mobile Apps</span> Mobile Apps</span
    > and <span class="font-serif font-normal italic">Web experiences</span>.
  </h2>
  <div
    class="absolute left-0 w-full max-h-screen opacity-50 -z-20 overflow-hidden"
  >
    <div
      class="absolute w-full h-full bg-gradient-to-t from-background from-0% via-transparent to-background z-0"
    >
    </div>
    <div class="relative -z-20 grid grid-cols-3 auto-cols-fr w-full gap-y-72">
      {
        details.highlights.map(
          ({ image }: { image: { url: string } }, i: number) => {
            return <img src={image.url} class={styles[i] + ""} width="100%" />;
          }
        )
      }
    </div>
  </div>
</section>

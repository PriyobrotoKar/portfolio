---
import { motion } from "framer-motion";
import { cosmic } from "@/lib/cosmic";

const { objects: skills } = await cosmic.objects
  .find({ type: "skills" })
  .props("slug,title,metadata")
  .depth(1);
---

<div
  class="absolute overflow-hidden max-w-sm left-1/2 -translate-x-1/2 -translate-y-1/3"
  style={{
    mask: "linear-gradient(90deg,transparent,white 40%,white 60%, transparent)",
  }}
>
  <ul class="flex gap-2 w-max animate-scroll">
    {
      skills.map((skill: any, i: number) => {
        return (
          <li>
            <motion.img
              client:load
              initial={{ opacity: 0, scale: 0.8 }}
              animate={{ opacity: 1, scale: 1 }}
              transition={{
                delay: i * 0.1 + 0.5,
                ease: "easeInOut",
                duration: 0.5,
              }}
              className="size-9 "
              src={skill.metadata.logo.url}
              alt={skill.title}
            />
          </li>
        );
      })
    }
    {
      skills.map((skill: any) => {
        return (
          <img
            class="size-9 "
            src={skill.metadata.logo.url}
            alt={skill.title}
          />
        );
      })
    }
  </ul>
</div>

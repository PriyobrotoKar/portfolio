---
import Card from '@/components/Card.tsx'
import GradientHeading from '@/components/GradientHeading.astro'
import TabsSwitch from '@/components/TabsSwitch'
import SiteLayout from '@/layouts/SiteLayout.astro'
import WorkLayout from '@/layouts/WorkLayout.astro'
import Works from '@/components/Works'
import { cosmic } from '@/lib/cosmic'

const { objects } = await cosmic.objects
  .find({ type: 'projects' })
  .props('slug,title,metadata')
  .depth(1)
  .limit(6)
---

<SiteLayout>
  <div class="py-16 sm:py-40 sm:pb-24">
    <div class="space-y-4">
      <GradientHeading className="text-6xl font-semibold">Works</GradientHeading
      >
      <p class="text-center text-xl text-muted-foreground max-w-lg mx-auto">
        Crafting tailored, high-quality solutions with a blend of innovation and
        technical expertise.
      </p>
    </div>
  </div>
  <Works objects={objects} client:load />
</SiteLayout>
